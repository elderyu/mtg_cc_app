<div class="center">
  <% if @result["layout"] != "transform" %>
    <%= image_tag("#{@result["image_uris"]["normal"]}", alt: "mtg card") %>
  <% else %>
    <% @result["card_faces"].each do |face| %>
      <%= image_tag("#{face["image_uris"]["normal"]}", alt: "mtg card") %>
    <% end %>
  <% end %>
</div>

<% if logged_in? && @result.present? %>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(collected_cards_create_path, url: add_path) do |form| %>
      <%= hidden_field_tag :name, @result["name"] %>
      <%= hidden_field_tag :layout, @result["layout"] %>
      <%= form.label :count %>
      <%= form.text_field :count, class: 'form-control' %>
      <%= form.submit "Add this card to your collection", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
<% end %>
